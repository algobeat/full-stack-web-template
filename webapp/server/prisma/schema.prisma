generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_HOST")
}

enum UserRoles {
  USER
  ADMIN
}

model User {
  email String  @unique
  id    Int     @default(autoincrement()) @id
  name  String?

  password String

  role UserRoles @default(USER)
}

model Session {
    id      Int     @id @default(autoincrement())
    token   String  @unique
    user    User
    expires DateTime
}